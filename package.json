{
  "name": "nextjs-todo-list",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"next dev\"",
    "dev:css": "tailwindcss -w -i ./styles/tailwind.css -o styles/app.css",
    "build": "next build",
    "build:css": "tailwindcss -m -i ./styles/tailwind.css -o styles/app.css",
    "gen:schema": "supabase gen types --lang=typescript --local > lib/schema.ts",
    "gen:schema:remote": "supabase gen types --lang=typescript --linked remote > lib/schema.ts",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@next/font": "13.1.6",
    "@supabase/auth-helpers-react": "^0.5.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/supabase-js": "^2.47.16",
    "@tanstack/react-query": "^5.64.1",
    "@types/node": "18.14.0",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "eslint": "8.34.0",
    "eslint-config-next": "13.1.6",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.2",
    "concurrently": "^7.6.0",
    "dotenv": "^16.4.7",
    "jsdom": "^26.0.0",
    "playwright": "^1.49.1",
    "supabase": "^2.6.8",
    "tailwindcss": "^3.4.17",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.2",
    "vitest-fail-on-console": "^0.7.1"
  }
}
